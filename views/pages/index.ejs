<%- include('../layouts/header'); -%>
    <section class="section">
        <div class="container">
            <h1 class="title">
                Hello World
            </h1>
            <p class="subtitle">
                My first website with <strong>Bulma</strong>!
            </p>
        </div>
        <section class="section">
            <div class="container is-max-tablet">
                <h1 class="subtitle">Encontre um profissional</h1>
                <form action="/search" method="post">

                    <div class="field">
                        <label class="label"></label>
                        <div class="control">
                            <input class="input" name="category" type="text" placeholder="profissional">
                        </div>
                    </div>

                    <div class="field">
                        <label class="label"></label>
                        <div class="control">
                            <input class="input" name="city" type="text" placeholder="cidade">
                        </div>
                    </div>

                    <div class="field">
                        <label class="label"></label>
                        <div class="control">
                            <input class="input" name="state" type="text" placeholder="estado">
                        </div>
                    </div>

                    <div class="field is-grouped">
                        <div class="control">
                            <button class="button is-link">Pesquisar</button>
                        </div>
                    </div>

                </form>
            </div>
        </section>
        <div class="container is-max-tablet">
            <p class="help">
                Don't have an account? <a href="/signup">Sign up</a> |
                Already have an account? <a href="/login">Sign in</a>
            </p>
        </div>

    </section>
    <%- include('../layouts/footer'); -%>