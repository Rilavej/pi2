<section class="section">
    <% if (message) { %>
        <div class="block has-text-centered	">
            <h1 class="subtitle">
                <%= message %>
            </h1>
        </div>
        <% } %>
            <% if (messages.length> 0) { %>
                <div class="block has-text-centered	">
                    <% messages.forEach(message=> { %>
                        <h1 class="subtitle">
                            <%= message %>
                        </h1>
                        <% }); %>
                </div>
                <% } %>
</section>