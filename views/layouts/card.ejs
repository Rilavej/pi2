<div class="container is-max-tablet">
    <div class="card">
        <div class="card-image">
            <figure class="image is-4by3">
                <img src="https://bulma.io/assets/images/placeholders/1280x960.png" alt="Placeholder image" />
            </figure>
        </div>
        <div class="card-content">
            <div class="content">
                <h1>
                    <%= user.name %>
                </h1>
                <div class="py-0">
                    <hr>
                    <% person.Cbos.forEach(cbo=> { %>
                        <h6>
                            <%= cbo.title %>
                        </h6>
                        <% if (cbo.Profession.jobDescription) { %>
                            <p>
                                <%= cbo.Profession.jobDescription %>
                            </p>
                            <% } %>
                                <hr>
                                <% }) %>
                </div>
                <div class="media-left">
                    <figure class="image is-48x48">
                        <img src="https://bulma.io/assets/images/placeholders/96x96.png" alt="Placeholder image" />
                    </figure>
                </div>
                <% person.SocialAccounts.forEach(socialAccount=> { %>
                    <span>
                        <a href="#">
                            <%= socialAccount.link %>
                        </a>
                    </span>
                    <% }) %>
                        <br>
                        <% person.Phones.forEach(phoneRow=> { %>
                            <span>
                                <%= phoneRow.phone %>
                            </span>
                            <% }) %>
            </div>
        </div>
    </div>
</div>